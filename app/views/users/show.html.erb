<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>

      <% if @user.admin?  %>
         <p> Admin   </p>

      <% else  %>
         <p> User   </p>
      <% end %>
    </section>
  </aside>

</div>
