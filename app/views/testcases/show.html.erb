<% provide(:title,"Testcase #{@testcase.title}") %>
<% testresults = @testcase.testresults %>
<script>
	Highcharts.setOptions({
		colors : ['#50B432', '#FF9900', '#480000', '#B00000', '#64E572', '#FF9655', '#FFF263', '#6AF9C4']
	});

	var testrunsName = []
<% testresults.each do |testresult| %>
    testrunsName.push("<%= testresult.testrun.name %>")
<% end %>
	var Passed = []
	var Failed = []
	var Pending = []
	var Blocked = []

<% testresults.each do |testresult| %><% if testresult.status == "Passed" %>
	Passed.push(1)
	Failed.push(0)
	Pending.push(0)
	Blocked.push(0)
<% elsif testresult.status == "Failed" %>
	Passed.push(0)
	Failed.push(1)
	Pending.push(0)
	Blocked.push(0)
<% elsif testresult.status == "Blocked" %>
	Passed.push(0)
	Failed.push(0)
	Pending.push(0)
	Blocked.push(1)
<% elsif testresult.status == "Pending" %>
	Passed.push(0)
	Failed.push(0)
	Pending.push(1)
	Blocked.push(0)
<% else %>
	Passed.push(0)
	Failed.push(0)
	Pending.push(0)
	Blocked.push(0)
<% end %><% end %>
	$(function() {
		$('#container').highcharts({
			chart : {
				type : 'column'
			},
			title : {
				text : 'Testcase History'
			},
			xAxis : {
				categories : testrunsName
			},
			yAxis : {
				min : 1,

				title : {
					text : 'Status'
				},
				stackLabels : {
					enabled : false,
				}
			},
			plotOptions : {
				column : {
					stacking : 'normal',
				}
			},
			series : [{
				name : 'Passed',
				data : Passed
			}, {
				name : 'Pending',
				data : Pending
			}, {
				name : 'Blocked',
				data : Blocked
			}, {
				name : 'Failed',
				data : Failed
			}]
		});
	}); 
</script>
