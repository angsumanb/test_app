<% provide(:title, 'Create new testcase') %>
 <div>
                <ul class="breadcrumb">
                   <li> <%=link_to @suite.pod.project.name, @suite.pod.project %>  <span class="divider">/</span></li>
                   <li> <%=link_to @suite.pod.name, @suite.pod %>  <span class="divider">/</span></li>
                   <li> <%=link_to @suite.name, @suite %>  <span class="divider">/</span></li>
                   <li class="active">New testcase </li>
                </ul>
       </div>

<h1>Create new testcase</h1>
<div class="hero-unit">
<div class="row-fluid">
  <div class="span12">
    <%= form_for(@testcase, :html => { class: "form-horizontal"} ) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.hidden_field  :suite_id, value: @suite.id %>      
     <div class="input-prepend">
       <span class="add-on">Title</span>
         <%= f.text_field :title, placeholder: "Title", class: "input-xxxlarge" %> 
     </div>

   <div class="row-fluid">
      <div class="span6">
	<div class="input-prepend">
  	  <span class="add-on">Testtype</span>
       		<%= f.select :testtype,  Testcase::TTOPTIONS %>
  	</div>
      </div>
  
      <div class="span6">
        <div class="input-prepend">
  	  <span class="add-on">Priority</span>
     		 <%= f.select :priority,  Testcase::PROPTIONS %>
        </div>
      </div>
      </div>
   <div class="row-fluid">
      <div class="span6">
	<div class="input-prepend">
  	  <span class="add-on">Estimate</span>
        	<%= f.text_field :estimate, placeholder: "Estimate" %>
        </div>
      </div>
  </div>
      <%= f.label :steps %>
      <%= f.text_area :steps, size: "20*90", class: "input-xxxxlarge", placeholder: "Steps..." %>
      
</br>
      <%= f.submit "Create new testcase", class: "btn  btn-primary" %>
    <% end %>
  </div>
</div>
</div>
